FROM python:3.11-slim

WORKDIR /app

# Install Python dependencies
RUN pip install --no-cache-dir flet>=0.10.0

# Create the directories for the logo files
RUN mkdir -p jiji

# Copy application code
COPY front.py front.py
COPY ../logo.png jiji/logo.png
COPY ../logop.png jiji/logop.png

# Expose port
EXPOSE 8001

# Command to run the frontend application
CMD ["python", "front.py"]